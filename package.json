{
  "name": "sakura",
  "version": "0.1.0",
  "description": "Social network",
  "main": "app.ts",
  "scripts": {
    "dev": "npx nodemon source/app.ts | pino-pretty --translateTime",
    "dev:up": "docker compose -f docker/docker-compose.yml up -d --remove-orphans",
    "dev:down": "docker compose -f docker/docker-compose.yml down",
    "dev:db:migrate": "npx prisma migrate dev",
    "prepare": "husky install"
  },
  "prisma": {
    "schema": "source/prisma/schema.prisma"
  },
  "author": "Sakura dev team",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^4.10.1",
    "config": "^3.3.9",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "pino": "^8.11.0",
    "pino-http": "^8.4.0",
    "pino-pretty": "^9.3.0",
    "prettier": "^2.8.8"
  },
  "devDependencies": {
    "@types/config": "^3.3.0",
    "@types/cookie-parser": "^1.4.3",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/node": "^18.14.1",
    "husky": "^8.0.3",
    "nodemon": "^2.0.20",
    "prisma": "^4.10.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  }
}
